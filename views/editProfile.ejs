<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>

<body>

    <%- include ("layout.ejs") %>

        <br>

        <div class="container p-5">
            <h3 class="p-2">Edit Profile</h3>
            <div class="col-sm-12 bg-light border rounded py-3 ">
                <form action="/profile/editProfile" method="POST" novalidate>
                    <div class="form-group">
                        <label for="phone">First Name: </label>
                        <input type="text" name="fname" id="fname" class="form-control" value="<%= (locals.oldData) ? oldData.fname : ''; %>" required>
                        </input>
                    </div>
                    <div class="form-group">
                        <label for="phone">Last Name: </label>
                        <input type="text" name="lname" id="lname" class="form-control" value="<%= (locals.oldData) ? oldData.lname : ''; %>" required>
                        </input>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone: </label>
                        <input type="text" name="phone" id="phone" class="form-control" value="<%= (locals.oldData) ? oldData.phone : ''; %>" required>
                        </input>
                    </div>
                    <div class="form-group">
                        <label for="phone">Email: </label>
                        <input type="text" name="email" id="email" class="form-control" value="<%= (locals.oldData) ? oldData.email : ''; %>" required>
                        </input>
                    </div>
                    <div class="form-group">
                        <label for="phone">Citizen ID: </label>
                        <input type="text" name="citizenId" id="citizenId" class="form-control" value="<%= (locals.oldData) ? oldData.citizenId : ''; %>" required>
                        </input>
                    </div>

                    <% if (locals.editProfileError) { editProfileError.forEach(function(error_msg){ %>
                        <div class="alert alert-danger" role="alert">
                            <%= error_msg %>
                        </div>
                        <% }); } %>

                            <br>
                            <button type="submit" class="btn btn-outline-success me-3 " style="float: right;">Save</button>
                            <br>
                            <a href="/profile" class="p-2">back</a>
                </form>
            </div>
        </div>
</body>

</html>